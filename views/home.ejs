<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- External CSS -->
    <link rel="stylesheet" href="../css/common.css">
</head>

<body>
    <%- include("partials/navbar") %>

        <div class="container text-dark-color m-top">
            <div class="lg-large-large-text text-center">GALLERY</div>
            <div class="col-sm-12">
                <div>
                    <% items=items.reverse() %>
                        <% items.forEach(function(image){ %>
                            <!-- addded -->
                            <div class="row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-8 g-4">
                                    <div class="card">
                                        <h5 class="card-header">
                                            <%= image.name %>
                                                (<%= image.email %>)
                                        </h5>
                                        <div style="height: auto; width: auto;">
                                            <img class="v-center" alt="image" width="100%" height="auto" loading="lazy"
                                                src="data:image/<%=image.img.contentType%>;base64,
                                            <%=image.img.data.toString('base64')%>" />
                                        </div>
                                        <p
                                            style="padding-left: 5px; padding-top: 5px; padding-right: 5px; font-size: 1.15rem;">
                                            <%= image.content %>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-sm-2"></div>
                            </div>
                            <!-- till here -->
                            <% }) %>
                </div>
            </div>
            <br><br>

            <div class="large-large-text text-center text-dark-color">
                You Have Reached the End!
            </div>
        </div>
        <!-- <%- include("partials/footer") %> -->

        <!-- bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
</body>

</html>